package mjsd1e1;
import java.util.Scanner;

public class ValidateYear {
	public static int validateYear() {
		Scanner userInput = new Scanner(System.in); 
		System.out.println("Por favor, ingrese el aÃ±o:");
		try {
			int year = userInput.nextInt();
			if (year >= 1900 && year <= 2099)
				return year;
			else
				System.out.println("El aÃ±o ingresado es invÃ¡lido");
				return validateYear();
		} catch (Exception e) {
			System.out.println("Por favor, ingrese un nÃºmero");
			return validateYear();
		}	
//		userInput.close();

	}
}